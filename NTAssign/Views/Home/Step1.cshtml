@* ClassSuffix: _ *@
@model NTAssign.Models.AssignModel
@{
    ViewBag.Title = "CNT Assign";
}

<h3 class="text-center">
    (n,m) Assignment Program for SWNTs Under Complex Environments
</h3>
<h4 class="text-center">
    Refer to: <a href="http://pubs.acs.org/doi/pdf/10.1021/acsnano.7b05860"><i>ACS Nano</i>, <b>2017</b>, <i>11</i> (10), pp 10509–10518</a>
</h4>
<h4 class="text-center">
    Guiding Video:
    <a href="http://www.chem.pku.edu.cn/cnt_assign/tutorial.mp4" style="text-decoration:underline">Website Tutorial</a>
    &nbsp;&nbsp;
    <a href="http://www.chem.pku.edu.cn/cnt_assign/bilayerplot.mp4" style="text-decoration:underline">Bilayer Plot</a>
</h4>
<h1>Step 1</h1>

<hr />
@using (Html.BeginForm("Step2", "Home"))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal math">
        <div class="form-group">
            <label for="selectEnv" class="control-label col-lg-3 col-md-4 col-sm-5 col-xs-12 col-xs-offset-0_5">Please select the SWNT sample type:</label>
            <div class="col-lg-3 col-md-3_5 col-sm-4 col-xs-6 col-xs-offset-0_5">
                @Html.DropDownListFor(model => model.Env, ViewBag.slEnv as List<SelectListItem>, new { id = "selectEnv", @class = "form-control selectpicker" })
            </div>
            <div class="col-lg-1 col-md-1_5 col-sm-2 col-xs-2 col-xs-offset-0_5">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
            <div class="col-lg-offset-0_5 col-lg-4 col-md-offset-0 col-md-3 col-sm-offset-0_5 margin-xs-top col-xs-12 col-xs-offset-0_5" style="height: 200px; overflow-y: auto;">
                <h4>Update Log</h4>
                <p>
                    <b>v1.1.1 &mdash; 2018/1/19</b><br />
                    - Ajax-based (n,m) calculator is now available. Assignment algorithm Updated. Minor bug fixed.
                </p>
                <p>
                    <b>v1.0.1-beta &mdash; 2017/12/20</b><br />
                    - Guiding Video updated.
                </p>
                <p>
                    <b>v1.0.1-beta &mdash; 2017/10/29</b><br />
                    - Minor adjustment.
                </p>
                <p>
                    <b>v1.0.0-beta &mdash; 2017/9/25</b><br />
                    - First release.
                </p>
            </div>
        </div>
    </div>
}

@section scripts
{
    <script>
        page1Load();
    </script>
}